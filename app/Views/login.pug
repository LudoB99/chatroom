include layout/layout

block content
  .container-fluid
    .row.no-gutter
      .d-none.d-md-flex.col-md-4.col-lg-6.bg-image
      .col-md-8.col-lg-6
        .login.d-flex.align-items-center.py-5
          .container
            .row
              .col-md-9.col-lg-8.mx-auto
                h1.login-heading.mb-4.text-center Bienvenue
                h3.login-heading.mb-4.text-center Connectez vous et chattez!
                form
                  .form-label-group
                    input#inputName.form-control(type='text' placeholder='Pseudonyme' required='' name='inputName' autofocus='')
                    label(for='inputName') Pseudonyme
                  .form-group.text-center
                    .form-check.form-check-inline
                      input#inlineCheckbox1.form-check-input(type='radio' name='inputSex' value='male')
                      label.form-check-label.fas.fa-male(for='inlineCheckbox1')
                    .form-check.form-check-inline
                      input#inlineCheckbox2.form-check-input(type='radio' name ='inputSex' value='female')
                      label.form-check-label.fas.fa-female(for='inlineCheckbox2')
                    .form-group
                      .well.well-sm.text-center
                        .btn-group(data-toggle='buttons')
                          label.btn.btn-success.active
                            input(type='radio' name='inputColor' autocomplete='off' checked='true')
                            span.glyphicon.glyphicon-ok
                          label.btn.btn-primary
                            input(type='radio' name='inputColor' autocomplete='off')
                            span.glyphicon.glyphicon-ok
                          label.btn.btn-info
                            input(type='radio' name='inputColor' autocomplete='off')
                            span.glyphicon.glyphicon-ok
                          label.btn.btn-warning
                            input(type='radio' name='inputColor' autocomplete='off')
                            span.glyphicon.glyphicon-ok
                          label.btn.btn-danger
                            input(type='radio' name='inputColor' autocomplete='off')
                            span.glyphicon.glyphicon-ok
